<?xml version="1.0"?>
<config>
    <tabs>
        <bubble translate="label">
            <label>Bubble Extensions</label>
            <sort_order>1100</sort_order>
        </bubble>
    </tabs>
    <sections>
        <bubble_autocomplete translate="label" module="bubble_autocomplete">
            <label>Autocomplete</label>
            <tab>bubble</tab>
            <sort_order>19</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <autocomplete_general translate="label">
                    <label>General Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <enable_jquery translate="label comment">
                            <label>Enable jQuery</label>
                            <comment><![CDATA[If you already have jQuery in your theme, you can disable the one added by Bubble Autocomplete.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enable>1</enable></depends>
                        </enable_jquery>
                        <min_length translate="label comment">
                            <label>Minimum Length</label>
                            <comment><![CDATA[The minimum character length needed before suggestions start getting rendered. Defaults to 1.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                            <depends><enable>1</enable></depends>
                        </min_length>
                        <limit translate="label comment">
                            <label>Suggestions Limit</label>
                            <comment><![CDATA[Number of suggestion to display. Defaults to 5. This is also the max amount of results fetched via Ajax Live Search.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                            <depends><enable>1</enable></depends>
                        </limit>
                        <prefetchlimit translate="label comment">
                            <label>Prefetch Limit</label>
                            <comment><![CDATA[Number of prefetched products. Defaults to 100. Pay attention to browser local storage limit. A few thousand products should work fine.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                            <depends><enable>1</enable></depends>
                        </prefetchlimit>
                        <cache_lifetime>
                            <label>Cache Lifetime</label>
                            <comment><![CDATA[The time (in seconds) the prefetched data should be cached in local storage. Defaults to 86400 (1 day).]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                            <depends><enable>1</enable></depends>
                        </cache_lifetime>
                    </fields>
                </autocomplete_general>
                <autocomplete_ajax translate="label">
                    <label>Ajax Settings</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!--heading translate="label">
                            <label>Ajax Live Search</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order></sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading-->
                        <enable_ajaxlivesearch translate="label comment">
                            <label>Enable Ajax Live Search</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                        </enable_ajaxlivesearch>
                        <ajax_ratelimitby translate="label comment">
                            <label>Ajax Rate Limit by</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_type>select</frontend_type>
                            <!--source_model>autocomplete/ajaxratelimit</source_model-->
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enable_ajaxlivesearch>1</enable_ajaxlivesearch></depends>
                        </ajax_ratelimitby>
                        <ajax_ratelimitwait translate="label comment">
                            <label>Ajax Rate Limit Wait</label>
                            <comment><![CDATA[Time in ms to wait after the typing leads to a new Ajax request]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-greater-than-zero validate-number</validate>
                            <depends><enable_ajaxlivesearch>1</enable_ajaxlivesearch></depends>
                        </ajax_ratelimitwait>
                    </fields>
                </autocomplete_ajax>
            </groups>
        </bubble_autocomplete>
    </sections>
</config>
